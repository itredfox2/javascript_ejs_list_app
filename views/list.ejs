<%- include("header") -%>

<div class="box" id="heading">
  <h1> <%= listTitle %> </h1>
</div>

<div class="box">

  <% for (let x=0; x<newListItems.length; x++) { %>
    <form action="/delete" method="post">

      <div class="item">
        <input type="checkbox" name="checkbox" value="<%= newListItems[x] %>" onChange="this.form.submit()">
        <p><%= newListItems[x] %></p>
      </div>

    </form>
  <% } %>

  <form class="item" action="/" method="post">

    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
    <button type="submit" name="list" value=<%= listTitle %>>+</button>
    
  </form>
</div>

<%- include("footer") -%>
